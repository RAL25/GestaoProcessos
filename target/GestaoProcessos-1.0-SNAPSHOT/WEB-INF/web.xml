<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    
    <context-param>
        <param-name>
            primefaces.PRIVATE_CAPTCHA_KEY
        </param-name>
        <param-value>
            Lf6_SgpAAAAALlPTvieJFrD20yHUuuzMDN8zd-U
        </param-value>
    </context-param>

    <context-param>
        <param-name>
            primefaces.PUBLIC_CAPTCHA_KEY
        </param-name>
        <param-value>
            6Lf6_SgpAAAAAF7l_Y1DziIpQRWPvc1Okibsll5r
        </param-value>
    </context-param>
    
    
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    
    <security-role>
        <description>Administrador</description>
        <role-name>0</role-name>
    </security-role>
    
    <security-role> 
        <description>Editor</description>
        <role-name>1</role-name>
    </security-role>
    
    <security-role> 
        <description>Candidato</description>
        <role-name>2</role-name>
    </security-role>
    
    <security-constraint>
        <display-name>Regras para todos</display-name>
        <web-resource-collection>
            <web-resource-name>All App Pages</web-resource-name>
            <url-pattern>/app/index.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>0</role-name>
            <role-name>1</role-name>
            <role-name>2</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Regras Administrador</display-name>
        <web-resource-collection>
            <web-resource-name>All App Pages</web-resource-name>
            <url-pattern>/app/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>0</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>Regras Editor</display-name>
        <web-resource-collection>
            <web-resource-name>All App Pages</web-resource-name>
            <url-pattern>/app/editor/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>1</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Regras Candidato</display-name>
        <web-resource-collection>
            <web-resource-name>Profile Page</web-resource-name>
            <url-pattern>/app/candidato/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>2</role-name>
        </auth-constraint>
    </security-constraint>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
        
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/templates/forbidden.xhtml</location>
    </error-page>
</web-app>
